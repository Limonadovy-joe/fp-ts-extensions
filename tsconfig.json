{
    "compilerOptions": {
      "outDir": "./dist/lib",
      "noEmit": true,
      "esModuleInterop": true,
      "target": "ES5",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "lib": ["ES6"],
      "sourceMap": false,
      "declaration": true,
      "strict": true,
      "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
    },
    "include": ["./src", "./test"]
  }