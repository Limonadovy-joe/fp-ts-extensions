{
  "compilerOptions": {
    "outDir": "./dist/lib",
    "noEmit": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["es2019"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src", "./test"]
}
